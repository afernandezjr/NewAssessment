</nav>

   <div style="padding: 10%; padding-top: 5em !important;">
    <h1><%= data[0].fname %> </h1>
    <table border="1px" >
        <thead>
            <th>ID</th>
            <th>Order from</th>
            <th>Order Date</th>
            <th>Order Status</th>
            <th>Order Total</th>
            <th>View Order</th>
            <th>Approve</th>
        </thead>
        <tbody>
            <% for(var i=0; i < data.length; i++) { %>
                <tr>
                    <td><%= data[i].transactionid   %></td>
                    <td><%= data[i].fname  %></td>
                    <td><%= data[i].date  %></td>
                    <td><%= data[i].status  %></td>
                    <td><%= data[i].Total  %></td>
                    <td><a href="/vieworder/<%= data[i].transactionid %>" target="_blank">View order</a></td>
                    <td>
                        <button type="button" class="btn btn-success" onclick="approve(<%=  JSON.stringify(data[i].transactionid) %>)" >Deliver</button>
                    </td>
                </tr>
                <% } %>

        </tbody>
    </table>
       
   </div>
   
    
</body>
</html>
<script>
    $("table").DataTable();

    function approve(data){



        $.ajax({
            type: "POST",
            url: "/approveapplication",
            data:{upid:data},
            success:()=>{
                location.reload(true);
            }
        });
    }
    function decline(data){
        $.ajax({
            type: "POST",
            url: "/declineapplication",
            data:{upid:data},
            success:()=>{
                location.reload(true);
            }
        });
    }
  
</script>